pipeline {
    agent any
    environment {
        registry = "vinitkumargoel/lbgpoc_poc-frontend"
        registryCredential = 'dockerhub'
        dockerImage = ''
    } 
    triggers { 
        pollSCM('* * * * *') 
    }
    stages {
        stage("Clone the Code") {
            steps {
                git branch: 'master', url: 'https://github.com/lbgopenbanking/poc-frontend'
            }
        }
        stage("Install Dependency") {
            steps {
                sh "'npm' install"
            }
        }
        stage("Unit Test") {
            steps {
                sh "'npm' test"
            }
        }
        stage("Sonar") {
            steps {
                sh "sonar-scanner"
            }
        }
        stage("Build Image") {
            steps {
                script {
                    dockerImage = docker.build registry + ":latest"
                }
            }
        }
        stage('Publish Image') {
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy Code on ENV') {
            steps{
                sh "'kubectl' delete replicationcontroller poc-frontend-rc"
                sh "'kubectl' create -f rc.yml"
            }
        }
    }
    post {
        always {  
            cleanWs()
        }
    }
}