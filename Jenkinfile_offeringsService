pipeline {
    agent any
    triggers { 
        pollSCM('H/3 * * * *') 
    }
    stages {
        stage("Clone the Code") {
            steps {
                git branch: 'master', url: 'https://github.com/lbgopenbanking/offeringsService'
            }
        }
        stage("Install dependencies") {
            steps {
                sh "'npm' install"
            }
        }
        stage("Unit Test") {
            steps {
                echo 'DONE'
            }
        }
        stage("Deploy on Server") {
            steps {
                echo 'DONE'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}