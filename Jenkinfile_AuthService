pipeline {
    agent any
    environment {
        registry = "vinitkumargoel/lbgpoc_authservice"
        registryCredential = 'dockerhub'
        dockerImage = ''
    } 
    triggers { 
        pollSCM('H/3 * * * *') 
    }
    stages {
        stage("Clone the Code") {
            steps {
                git branch: 'master', url: 'https://github.com/lbgopenbanking/AuthService'
            }
        }
        stage("Unit Test") {
            steps {
                sh "'npm' test"
            }
        }
        stage("Build Image") {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Publish Image') {
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy Code on ENV') {
            steps{
                sh 'FILE="rc_2.yml"'
                sh '/bin/cat <<EOM >$FILE
                    apiVersion: v1
                    kind: ReplicationController
                    metadata:
                    name: authservice-rc
                    spec:
                    replicas: 5
                    selector:
                        app: authservice
                    template:
                        metadata:
                        labels:
                            app: authservice
                        spec:
                        containers:
                            - name: hello-ctr
                            image: vinitkumargoel/lbgpoc_authservice:$BUILD_NUMBER
                            ports:
                                - containerPort: 3000
                    EOM'
                sh "'kubectl' apply -f rc_2.yml"
            }
        }
    }
    post {
        
    }
}