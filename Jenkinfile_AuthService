pipeline {
    agent any
    environment {
        registry = "vinitkumargoel/lbgpoc_authservice"
        registryCredential = 'dockerhub'
        dockerImage = ''
    } 
    triggers { 
        pollSCM('H/3 * * * *') 
    }
    stages {
        stage("Clone the Code") {
            steps {
                git branch: 'master', url: 'https://github.com/lbgopenbanking/AuthService'
            }
        }
        stage("Unit Test") {
            steps {
                sh "'npm' test"
            }
        }
        stage("Build Image") {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Publish Image') {
            steps{
                script {
                    docker.withRegistry( '', registryCredential ) {
                        dockerImage.push()
                    }
                }
            }
        }
        stage('Deploy Code on ENV') {
            steps{
                writeFile file: "output/usefulfile.txt", text: "This file is useful, need to archive it."
                sh "'kubectl' apply -f rc_2.yml"
            }
        }
    }
    post {
        always {  
            cleanWs()
        }
    }
}